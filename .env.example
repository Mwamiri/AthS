# AthSys Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://athsys_user:athsys_pass@localhost:5432/athsys_db

# Redis Configuration
REDIS_URL=redis://:athsys_redis_pass@localhost:6379/0

# Application Configuration
DEBUG=False
PORT=5000
SECRET_KEY=change-this-to-a-secure-random-key-in-production
JWT_SECRET=change-this-to-another-secure-random-key

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@athsys.com

# File Upload Configuration
MAX_FILE_SIZE_MB=10
UPLOAD_FOLDER=./data/uploads

# Session Configuration
SESSION_LIFETIME=86400
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True

# Rate Limiting
RATE_LIMIT_LOGIN=10
RATE_LIMIT_API=200

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/athsys.log

# Docker-specific (when using docker-compose)
# DATABASE_URL=postgresql://athsys_user:athsys_pass@postgres:5432/athsys_db
# REDIS_URL=redis://:athsys_redis_pass@redis:6379/0
